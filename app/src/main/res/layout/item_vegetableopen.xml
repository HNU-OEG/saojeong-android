<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff"
    tools:context=".adapter.VegetableOpenAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="91dp"
        android:layout_height="91dp">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:src="@drawable/logo_start"
            android:background="@drawable/img_round"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_favorate"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/like"
            android:elevation="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_shop" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shopnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72번"
                android:textColor="#f67043"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="서진 농산시장"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_star"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:textColor="#ffdc79"
                android:textSize="12dp"
                android:text="★" />

            <TextView
                android:id="@+id/tv_starscore"
                android:layout_width="21dp"
                android:layout_height="16dp"
                android:textSize="12dp"
                android:text="4.8" />

            <TextView
                android:id="@+id/tv_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:textSize="8dp"
                android:text="38명이 평가하였습니다." />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_self_introduction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10dp"
                android:text="오늘 하루도 좋은 일만 ^^*" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>