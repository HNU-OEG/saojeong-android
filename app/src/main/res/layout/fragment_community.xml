<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="182dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_community"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FFFFFF"
                app:popupTheme="@style/AppTheme.AppBarOverlay">

                <TextView
                    android:id="@+id/tool11bar"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="커뮤니티"
                    android:textColor="#000000" />
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_community_btn_freeboard"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="자유게시판"
                    android:textColor="@color/colorMain" />

                <TextView
                    android:id="@+id/tv_community_btn_notice"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="공지사항" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <TextView
                android:id="@+id/et_community_board"
                android:layout_width="309dp"
                android:layout_height="30dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_edittext_gray"></TextView>

            <EditText
                android:id="@+id/et_community_boardsearch"
                android:layout_width="260dp"
                android:layout_height="19dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="31dp"
                android:background="@null"
                android:hint="게시글을 검색하세요"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="27dp"
                app:srcCompat="@drawable/search" />
        </RelativeLayout>

        <!-- 프레임 레이아웃 씌워야댐;;-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="230dp"
                android:layout_height="20dp"
                android:theme="@style/AppTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorMain"
                app:tabIndicatorFullWidth="false"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/colorMain"></com.google.android.material.tabs.TabLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_community_btn_write"
                android:layout_width="33dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="#ffffff"
                android:text="작성"
                app:elevation="0dp"
            />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:layout_toLeftOf="@+id/tv_community_btn_write"
                app:srcCompat="@drawable/search" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDBDB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_community_bottom"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_community_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            >

            <ImageView
                android:src="@drawable/ar_left"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_community_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            >

            <ImageView
                android:src="@drawable/ar_right"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_community_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            >

            <ImageView
                android:src="@drawable/community"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_community_re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            >

            <ImageView
                android:src="@drawable/chatbot"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_community_upscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            >

            <ImageView
                android:src="@drawable/community_orange"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>