<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image3">

    <LinearLayout
        android:id="@+id/ll_test0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="176dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/login_facebook"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_round"
                android:elevation="2dp"
                android:textSize="19sp"
                android:textColor="#ff7f04"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:text="Facebook"
                />

            <Button
                android:id="@+id/login_kakaotalk"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:elevation="2dp"
                android:textSize="19sp"
                android:textColor="#ff7f04"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:text="KakaoTalk"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <Button
                android:id="@+id/login_naver"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:elevation="2dp"
                android:textSize="19sp"
                android:textColor="#ff7f04"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:text="Naver"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/login_google"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:elevation="2dp"
                android:textSize="19sp"
                android:textColor="#ff7f04"
                android:lineSpacingExtra="7sp"
                android:gravity="center"
                android:text="Google"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_round"
            android:elevation="2dp"
            android:textSize="19sp"
            android:textColor="#8d8d8d"
            android:lineSpacingExtra="7sp"
            android:gravity="center"
            android:text="게스트 로그인"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:textColor="#8d8d8d"
            android:lineSpacingExtra="4sp"
            android:gravity="end"
            android:text="게스트 사용자는 평점 및 커뮤니티 기능을 사용하실 수 없습니다."
            />
    </LinearLayout>

</RelativeLayout>

